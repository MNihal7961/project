<%- include('../partials/user-head.ejs') %>
    <%- include('../partials/user-nav.ejs') %>
        <style>
            .btn-color {
                background-color: #014122;
                color: #fff;

            }

            .profile-image-pic {
                height: 150px;
                width: 150px;
                object-fit: cover;
            }

            .cardbody-color {
                background-color: #eee;
            }

            a {
                text-decoration: none;
            }
        </style>
        <div class="container">
            <div class="row">
                <div class="col-md-6 offset-md-3">
                    <h2 class="text-center text-dark mt-5">Reset Password</h2>
                    <div class="text-center mb-5 text-dark">Made Your Drip</div>
                    <div class="card my-5">

                        <form class="card-body cardbody-color p-lg-5" method="post" action="/user/reset/password">

                            <div class="text-center">
                                <img src="data:image/png;base64,"
                                    class="img-fluid profile-image-pic img-thumbnail rounded-circle my-3" width="200px"
                                    alt="profile">
                            </div>

                            <div class="mb-3">
                                <label for="oldpass">Enter Your Old Password</label>
                                <input required type="password" class="form-control" name="oldpassword"
                                    placeholder="Enter Your Old Password">
                            </div>

                            <div class="mb-3">
                                <label for="oldpass">Enter Your New Password</label>
                                <input required type="password" class="form-control" name="newpassword"
                                    placeholder="Enter Your New Password">
                            </div>



                            <div class="text-center">
                                <button type="submit" class="btn btn-color px-5 mb-5 w-100"
                                    onclick="return confirm('Are you sure you want to reset password?')">Rest
                                    Password</button>
                            </div>
                            <a href="/user/profile/:id" class="float-end btn btn-primary">Back to account</a>
                        </form>
                    </div>

                </div>
            </div>
        </div>
        <%- include('../partials/user-foot.ejs') %>